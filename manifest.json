{
  "manifest_version": 3,
  "name": "Image Tool Pro",
  "version": "1.0",
  "description": "Get image URL and remove backgrounds",
  "permissions": [
    "contextMenus",
    "storage",
    "clipboardWrite",
    "scripting",
    "downloads",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Image Tool Pro"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://web.gympal.com/*"],
      "js": ["gympal.js"],
      "run_at": "document_idle"
    }
  ]
}